<% layout('layouts/boilerplate')%>
<div class="row">
	<h1 class="text-center">CREATE BLOG</h1>
	<div class="col-6 offset-3">
		<form action="/blogs" method="POST" class="validate-form" novalidate>
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input class="form-control" type="text" name="blog[title]" id="title" required>
				<div class="invalid-feedback">
        			Please choose a Title.
      			</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="subtitle">SubTitle</label>
				<input class="form-control" type="text" name="blog[subtitle]" id="subtitle" required>
				<div class="invalid-feedback">
        			Please choose a Subtitle.
      			</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" cols="80" rows="8" type="text" name="blog[description]" id="description" required></textarea>
				<div class="invalid-feedback">
        			Description is required.
      			</div>
			</div>
			<button  class="btn btn-success my-3">ADD BLOG</button>
		</form>
	</div>
</div>


