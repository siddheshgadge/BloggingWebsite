<% layout('layouts/boilerplate')%>
<div class="row">
	<h1 class="text-center">EDIT BLOG</h1>
	<div class="col-6 offset-3">
		<form action="/blogs/<%= blog._id%>?_method=PUT" method="POST" novalidate class="validate-form">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input class="form-control" type="text" name="blog[title]" id="title" value="<%= blog.title %>" required>
				<div class="invalid-feedback">
        			Please choose a Title.
      			</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="subtitle">SubTitle</label>
				<input class="form-control" type="text" name="blog[subtitle]" id="subtitle" value="<%= blog.subtitle %>" required>
				<div class="invalid-feedback">
        			Please choose a Subtitle.
      			</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" cols="80" rows="8" type="text" name="blog[description]" id="description" required><%= blog.description %></textarea>
			</div>
			<div class="invalid-feedback">
        			Description is required.
      			</div>
			<button class="btn btn-success my-3">UPDATE BLOG</button>
			<a class="btn btn-dark my-3" href="/blogs/<%= blog._id %>">BACK</a>
		</form>
	</div>
</div>
