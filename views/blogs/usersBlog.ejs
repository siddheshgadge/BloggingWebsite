<% layout('layouts/boilerplate')%>
<h4 class="mb-3 text-center">Blogs by <cite><%= currentUser.username %></cite></h4>
<% for(let blog of filteredBlogs){ %>
	<div class="card mb-3 px-3">
		<div class="row">
			<div class="card-header">
				<%= blog.author.username %>
			</div>
			<div class="card-body">
				<h4 class="card-title"><%= blog.title %></h4>
				<h5 class="card-subtitle"><%= blog.subtitle %></h5>
				<p class="card-text"><%= blog.description.substring(0,350) %>...</p>
				<a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More</a>
			</div>
			<div class="card-footer text-muted">
				<%= moment(blog.createdAt).fromNow() %>
			</div>
		</div>
	</div>
<%  }%>
